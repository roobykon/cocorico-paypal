{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    'css/arcanum.css'
    'css/vendor/nanobar.css'
    filter='cssrewrite' output='css/compiled/arcanum.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block layout %}

<div class="nanobar"></div>

    <div class="container">
        <div class="row text center">
            <div class="col-lg-12">

                <div class="wrapper-arcanum-parameters">

                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <span class="badge badge-danger pull-right">{{ environment }}</span>
                                    <span class="badge badge-info pull-left">{{ site_name }}</span>
                                    <h3 class="panel-title text-center">{{ 'Parameters'|trans }}</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="arcanum-parameters-filter pull-left">
                                        <div class="input-group">
                                            <i class="fa fa-filter" aria-hidden="true"></i>
                                            <input type="search" class="form-control input-sm" placeholder="filter">
                                        </div>
                                    </div>
                                    <div class="arcanum-parameters-actions pull-right">
                                        <button type="button" class="btn btn-sm btn-success btn-save" data-url="{{ path('arcanum_parameters_save') }}"><i class="fa fa-floppy-o" aria-hidden="true"></i>{{ 'save'|trans }}</button>
                                        <button type="button" class="btn btn-sm btn-warning btn-reload" data-url="{{ path('arcanum_parameters_reload') }}"><i class="fa fa-refresh" aria-hidden="true"></i>{{ 'reload'|trans }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% for parameter, value in parameters %}

                        {% if value is not iterable %}
                        <div class="row wrapper-arcanum-parameter" data-origin-value="{{ value }}">
                        {% else %}
                        <div class="row wrapper-arcanum-parameter" data-origin-value="">
                        {% endif %}
                            <div class="col-lg-12">
                                <div class="col-lg-4 col-lg-offset-2 col-md-4 col-md-offset-2 col-sm-6 col-xs-6">
                                    <div class="arcanum-parameter col-cropped">
                                        {{ parameter }}
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                                    <div class="arcanum-value">
                                        <div class="col-cropped">
                                                <span class="arcanum-value-span">
                                                    {% if value is not iterable %}
                                                        {{ value }}
                                                    {% endif %}
                                                </span>
                                        </div>
                                        <div class="arcanum-value-actions">
                                            <i class="fa fa-pencil" aria-hidden="true"></i>
                                            <i class="fa fa-undo" aria-hidden="true"></i>
                                            <i class="fa fa-check hidden" aria-hidden="true"></i>
                                            <i class="fa fa-times hidden" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% endfor %}

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    'js/arcanum.js'
    'js/vendor/nanobar.min.js'
    output='js/compiled/arcanum.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}